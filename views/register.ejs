<h1 class="text-center mt-3">Register here</h1>
<p class="text-center" style="color: red"><%= include ('./partials/message'); %></p>
<form method="POST" class="container" action="/users/register">
    <div class="form-group">
        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="first name"
            value="<%= typeof firtsName != 'undefined' ? firstName : '' %>">
        <input type="email" class="form-control mt-3" name="email" id="email" placeholder="enter email"
            value="<%= typeof email != 'undefined' ? email : '' %>">
        <input type="password" class="form-control mt-3" name="password" id="password" placeholder="Enter password"
            value="<%= typeof password != 'undefined' ? password : '' %>">
        <input type="password" class="form-control mt-3" name="password2" id="password2" placeholder="re-enter password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
        <!-- <input type="file" name="user_img" class="img" id="user_img" readonly> -->
        <button class="container btn btn-primary btn-sm mt-3">submit</button>
        <p class="text-center mt-3">Click <a href="/users/login">here</a> to login.</p>
    </div>
</form>